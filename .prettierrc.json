{
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "semi": true,
  "singleQuote": true,
  "printWidth": 130,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.d.ts"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
